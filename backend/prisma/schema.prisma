generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model blogs {
  id         String   @id(map: "blogs_pk") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  thumbnail  String   @db.VarChar
  title      String   @db.VarChar
  content    String
  created_at DateTime @db.Timestamptz(6)
}

model categories {
  id        String   @id(map: "categories_pk") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String   @db.VarChar
  thumbnail String?  @db.VarChar
  drinks    drinks[]
}

model discount {
  id          String   @id(map: "discount_pk") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String   @db.Uuid
  description String?
  thumbnail   String?  @db.VarChar
  due_date    DateTime @db.Timestamptz(6)
  users       users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "discount_fk")
}

model drinks {
  id         String     @id(map: "drinks_pk") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String     @db.VarChar
  price      Int
  category   String     @db.Uuid
  thumbnail  String     @db.VarChar
  categories categories @relation(fields: [category], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "drinks_fk")
  orders     orders[]
}

model orders {
  id       String   @id(map: "orders_pk") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id  String   @db.Uuid
  drink_id String   @db.Uuid
  date     DateTime @db.Timestamptz(6)
  status   Int
  users    users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "orders_fk")
  drinks   drinks   @relation(fields: [drink_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "orders_fk_1")
}

model shops {
  id        String @id(map: "shops_pk") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  address   String @db.VarChar
  thumbnail String @db.VarChar
}

model users {
  id           String     @id(map: "users_pk") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  phone_number String     @db.VarChar
  address      String     @db.VarChar
  points       Int?
  password     Bytes
  created_at   DateTime?  @db.Timestamptz(6)
  discount     discount[]
  orders       orders[]
}
